<UserControl x:Class="CL8.UI.Views.Pages.Users.UserPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CL8.UI.Views.Pages.Users"
             xmlns:models="clr-namespace:CL8.UI.Models"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:Background="Azure" DataContext="{Binding UserPageViewModel, Source={StaticResource Locator}}"
             Background="Transparent">
    <DockPanel>
        <StackPanel Orientation="Vertical" Width="200" DockPanel.Dock="Left">
            <DockPanel Height="450">
                <TextBlock Text="{Binding Login}" Margin="10" DockPanel.Dock="Top" />
                <ListBox Width="200" Height="300" DockPanel.Dock="Top" Background="Transparent" ItemsSource="{Binding Chats}" SelectedItem="{Binding CurrentChat}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" />
                                <TextBlock Text="{Binding Description}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <StackPanel>
                    <Button Content="add" Style="{StaticResource gBtn}" Command="{Binding CreateChatCmd}" />
                    <Button Content="Search" Style="{StaticResource gBtn}" Command="{Binding ToSearchChatCmd}" />
                    <Button Content="Выйти" Style="{StaticResource gBtn}" Command="{Binding ExitCmd}" />
                </StackPanel>
            </DockPanel>
        </StackPanel>
        <StackPanel Width="600">
            <ListBox Height="370" ItemsSource="{Binding Messages}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding CreatedDate}" />
                            <TextBlock Text="{Binding Content}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel Orientation="Horizontal" Margin="0 10">
                <TextBox Width="410" Margin="10" Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}" Padding="5 2" />
                <Button Content="Отправить" Style="{StaticResource gBtn}" Command="{Binding SendMessageCmd}" />
            </StackPanel>
        </StackPanel>
    </DockPanel>
</UserControl>
