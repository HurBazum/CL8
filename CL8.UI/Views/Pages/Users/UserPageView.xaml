<UserControl x:Class="CL8.UI.Views.Pages.Users.UserPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CL8.UI.Views.Pages.Users"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:Background="Azure" DataContext="{Binding UserPageViewModel, Source={StaticResource Locator}}"
             Background="Transparent">
    <DockPanel>
        <StackPanel Orientation="Vertical" Width="200" DockPanel.Dock="Left">
            <DockPanel Height="450">
                <TextBlock Text="{Binding Login}" Margin="10" DockPanel.Dock="Top" />

                <Button Content="Выйти" Style="{StaticResource gBtn}" Command="{Binding ExitCmd}" />
            </DockPanel>
        </StackPanel>
        <StackPanel Width="600">
            <ListBox Height="370"></ListBox>
            <StackPanel Orientation="Horizontal" Margin="0 10">
                <TextBox Width="410" Margin="10" Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}" />
                <Button Content="Отправить" Style="{StaticResource gBtn}" Command="{Binding SendMessageCmd}" />
            </StackPanel>
        </StackPanel>
    </DockPanel>
</UserControl>
